{
    "compileOnSave": false,
    "compilerOptions": {
        "declaration": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [
            "es2017",
            "dom"
        ],
        "locale": "en",
        "moduleResolution": "node",
        "newLine": "lf",
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "outDir": "./dist/out-tsc",
        "pretty": true,
        /* RxJS sucks :( */
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": false,
        "target": "es5",
        "typeRoots": [
            "node_modules/@types"
        ]
    }
}
