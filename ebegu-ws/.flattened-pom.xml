<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>ch.dvbern.ebegu</groupId>
    <artifactId>ebegu</artifactId>
    <version>12b6eace6425d3836e6a858f4d140e31155b1781</version>
  </parent>
  <groupId>ch.dvbern.ebegu</groupId>
  <artifactId>ebegu-ws</artifactId>
  <version>12b6eace6425d3836e6a858f4d140e31155b1781</version>
  <licenses>
    <license>
      <name>GNU Affero General Public License</name>
      <url>http://www.gnu.org/licenses/agpl-3.0.txt</url>
    </license>
  </licenses>
  <dependencies>
    <dependency>
      <groupId>ch.dvbern.ebegu</groupId>
      <artifactId>ebegu-shared</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>jakarta.platform</groupId>
      <artifactId>jakarta.jakartaee-api</artifactId>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>com.sun.xml.ws</groupId>
      <artifactId>jaxws-rt</artifactId>
    </dependency>
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>jaxws-maven-plugin</artifactId>
        <version>2.6</version>
        <executions>
          <execution>
            <goals>
              <goal>wsimport</goal>
            </goals>
            <configuration>
              <wsdlDirectory>${basedir}/src/main/resources/wsdl</wsdlDirectory>
              <wsdlFiles>
                <wsdlFile>geres/GeresResidentInfo_v1801.wsdl</wsdlFile>
              </wsdlFiles>
              <verbose>true</verbose>
              <bindingFiles>
                <bindingFile>${basedir}/src/main/resources/wsdl/jaxb-bindings.xjb</bindingFile>
              </bindingFiles>
            </configuration>
          </execution>
          <execution>
            <id>sts service generation</id>
            <goals>
              <goal>wsimport</goal>
            </goals>
            <configuration>
              <wsdlDirectory>${basedir}/src/main/resources/wsdl/sts</wsdlDirectory>
              <wsdlFiles>
                <wsdlFile>ZertSTSWebservice.wsdl</wsdlFile>
                <wsdlFile>RenewalAssertionWebservice.wsdl</wsdlFile>
              </wsdlFiles>
              <verbose>true</verbose>
              <bindingFiles>
                <bindingFile>${basedir}/src/main/resources/wsdl/sts/jaxb-bindings-zonedTime.xjb</bindingFile>
              </bindingFiles>
            </configuration>
          </execution>
          <execution>
            <id>steuranbindung service generation</id>
            <goals>
              <goal>wsimport</goal>
            </goals>
            <configuration>
              <wsdlDirectory>${basedir}/src/main/resources/wsdl</wsdlDirectory>
              <wsdlFiles>
                <wsdlFile>neskovanp/kibonanfrage/KiBonAnfrageService.wsdl</wsdlFile>
              </wsdlFiles>
              <verbose>true</verbose>
              <bindingFiles>
                <bindingFile>${basedir}/src/main/resources/wsdl/jaxb-bindings.xjb</bindingFile>
              </bindingFiles>
            </configuration>
          </execution>
        </executions>
        <configuration>
          <sei />
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
